# SaverFox AI Backend - Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# API Service Configuration
# ============================================

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=saverfox
DB_PASSWORD=saverfox_password
DB_DATABASE=saverfox_db
DB_POOL_MAX=10
DB_POOL_MIN=2

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# AI Service
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_TIMEOUT=30000
AI_SERVICE_MAX_RETRIES=3
AI_SERVICE_RETRY_DELAY=1000

# CORS
CORS_ORIGIN=http://localhost:3001

# ============================================
# AI Service Configuration
# ============================================

# Application
AI_APP_NAME=SaverFox AI Service
AI_APP_VERSION=1.0.0
AI_HOST=0.0.0.0
AI_PORT=8000
AI_DEBUG=false

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Opik (Comet)
OPIK_API_KEY=your-opik-api-key-here
OPIK_WORKSPACE=default
OPIK_PROJECT_NAME=saverfox-adventures

# CORS
AI_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

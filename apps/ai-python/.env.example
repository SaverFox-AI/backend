# Application Configuration
APP_NAME=SaverFox AI Service
APP_VERSION=1.0.0
DEBUG=false
API_PREFIX=/api

# Server Configuration
HOST=0.0.0.0
PORT=8000

# LLM Provider Configuration
# Options: "openai", "gemini", or "kimi"
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2000

# Kimi (Moonshot) Configuration
KIMI_API_KEY=your-kimi-api-key-here
KIMI_MODEL=moonshot-v1-8k
KIMI_TEMPERATURE=0.7
KIMI_MAX_TOKENS=1000

# Opik Configuration (Comet)
OPIK_API_KEY=your-opik-api-key-here
OPIK_WORKSPACE=default
OPIK_PROJECT_NAME=saverfox-ai

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]
